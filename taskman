#!/usr/bin/env python3
# taskman — clean black UI task manager (Ubuntu 20/22/24, Python 3.8+)
#
# Keys:
#   ↑↓            Select
#   PgUp/PgDn     Jump
#   Enter         Terminate (SIGTERM)
#   K             Kill (SIGKILL)
#   S             Sort (CPU/MEM)
#   /             Filter
#   R             Refresh now
#   Q             Exit

import os
import sys
import time
import curses
import shutil
import signal

REFRESH_SEC = 1.0
JUMP_ROWS = 10
PROCS_PANEL_ROWS = 12          # keeps process section vertically smaller
MAX_PROCS_SCAN = 5000          # safety cap

# -------------------- helpers --------------------

def clamp(n, lo, hi):
    return lo if n < lo else hi if n > hi else n

def read_text(path, default=""):
    try:
        with open(path, "r", encoding="utf-8", errors="ignore") as f:
            return f.read()
    except Exception:
        return default

def read_first_line(path, default=""):
    try:
        with open(path, "r", encoding="utf-8", errors="ignore") as f:
            return f.readline().strip()
    except Exception:
        return default

def ellipsize(s, w):
    if w <= 0:
        return ""
    if len(s) <= w:
        return s
    if w <= 1:
        return s[:w]
    return s[:w - 1] + "…"

def human_bytes_dec(n):
    # decimal units: KB/MB/GB (not KiB/MiB/GiB)
    try:
        n = float(n)
    except Exception:
        return "0B"
    units = ["B", "KB", "MB", "GB", "TB"]
    u = 0
    while n >= 1000.0 and u < len(units) - 1:
        n /= 1000.0
        u += 1
    if u == 0:
        return f"{int(n)}{units[u]}"
    if units[u] in ("GB", "TB"):
        return f"{n:.2f}{units[u]}"
    return f"{n:.1f}{units[u]}"

def human_rate_dec(nps):
    return f"{human_bytes_dec(nps)}/s"

def meter(width, pct):
    pct = clamp(pct, 0.0, 100.0)
    fill = int(round((pct / 100.0) * width))
    fill = clamp(fill, 0, width)
    return "█" * fill + " " * (width - fill)

def get_hostname():
    try:
        return os.uname().nodename
    except Exception:
        return "host"

def get_kernel():
    try:
        return os.uname().release
    except Exception:
        return "?"

def get_os_pretty():
    data = read_text("/etc/os-release", "")
    for line in data.splitlines():
        if line.startswith("PRETTY_NAME="):
            v = line.split("=", 1)[1].strip().strip('"')
            return v
    for line in data.splitlines():
        if line.startswith("NAME="):
            return line.split("=", 1)[1].strip().strip('"')
    return "Linux"

def get_cpu_model():
    txt = read_text("/proc/cpuinfo", "")
    for key in ("model name", "Model", "Hardware", "Processor"):
        for line in txt.splitlines():
            if ":" in line:
                k, v = line.split(":", 1)
                if k.strip().lower() == key.lower():
                    return v.strip()
    return "CPU"

def get_uptime_str():
    up = read_first_line("/proc/uptime", "0 0").split()
    try:
        sec = int(float(up[0]))
    except Exception:
        sec = 0
    days = sec // 86400
    sec %= 86400
    hh = sec // 3600
    sec %= 3600
    mm = sec // 60
    ss = sec % 60
    if days > 0:
        return f"{days}d {hh:02d}:{mm:02d}:{ss:02d}"
    return f"{hh:02d}:{mm:02d}:{ss:02d}"

def get_loadavg3():
    s = read_first_line("/proc/loadavg", "0 0 0 0/0 0").split()
    return (s[0], s[1], s[2]) if len(s) >= 3 else ("0", "0", "0")

# -------------------- safe curses drawing --------------------

def safe_addnstr(stdscr, y, x, s, n, attr=0):
    try:
        h, w = stdscr.getmaxyx()
        if y < 0 or y >= h or x < 0 or x >= w:
            return
        # avoid last cell; some PTYs ERR
        maxn = max(0, min(n, w - x - 1))
        if maxn <= 0:
            return
        if attr:
            stdscr.attron(attr)
        stdscr.addnstr(y, x, s, maxn)
        if attr:
            stdscr.attroff(attr)
    except curses.error:
        return

def safe_fill(stdscr, y, x, n, attr=0):
    safe_addnstr(stdscr, y, x, " " * max(0, n), n, attr)

def safe_hline(stdscr, y, x, ch, n, attr=0):
    try:
        h, w = stdscr.getmaxyx()
        if y < 0 or y >= h or x < 0 or x >= w:
            return
        maxn = max(0, min(n, w - x - 1))
        if maxn <= 0:
            return
        if attr:
            stdscr.attron(attr)
        stdscr.hline(y, x, ch, maxn)
        if attr:
            stdscr.attroff(attr)
    except curses.error:
        return

def draw_box(stdscr, y, x, h, w, title, attr_border, attr_title):
    # clean, minimal box
    if h < 3 or w < 6:
        return
    safe_addnstr(stdscr, y, x, "┌" + "─" * (w - 2) + "┐", w, attr_border)
    safe_addnstr(stdscr, y + h - 1, x, "└" + "─" * (w - 2) + "┘", w, attr_border)
    for yy in range(y + 1, y + h - 1):
        safe_addnstr(stdscr, yy, x, "│", 1, attr_border)
        safe_addnstr(stdscr, yy, x + w - 1, "│", 1, attr_border)
        safe_fill(stdscr, yy, x + 1, w - 2, curses.color_pair(1))

    if title:
        t = f" {title} "
        safe_addnstr(stdscr, y, x + 2, ellipsize(t, w - 4), w - 4, attr_title)

# -------------------- system stats --------------------

def read_cpu_total_idle():
    line = read_first_line("/proc/stat", "")
    if not line.startswith("cpu "):
        return 0, 0
    parts = line.split()[1:]
    vals = []
    for x in parts:
        try:
            vals.append(int(x))
        except Exception:
            vals.append(0)
    total = sum(vals)
    idle = vals[3] + (vals[4] if len(vals) > 4 else 0)
    return total, idle

def read_meminfo_kb():
    out = {}
    for line in read_text("/proc/meminfo").splitlines():
        if ":" not in line:
            continue
        k, v = line.split(":", 1)
        v = v.strip().split()
        if not v:
            continue
        try:
            out[k] = int(v[0])
        except Exception:
            pass
    return out

def disk_usage_root():
    try:
        du = shutil.disk_usage("/")
        return du.total, du.used, du.free
    except Exception:
        return 0, 0, 0

def read_net_bytes_total():
    rx = 0
    tx = 0
    for line in read_text("/proc/net/dev").splitlines():
        if ":" not in line:
            continue
        iface, rest = line.split(":", 1)
        iface = iface.strip()
        if iface == "lo":
            continue
        cols = rest.split()
        if len(cols) < 16:
            continue
        try:
            rx += int(cols[0])
            tx += int(cols[8])
        except Exception:
            pass
    return rx, tx

# -------------------- processes --------------------

def list_pids():
    out = []
    try:
        for name in os.listdir("/proc"):
            if name.isdigit():
                out.append(int(name))
    except Exception:
        return []
    out.sort()
    return out[:MAX_PROCS_SCAN]

def read_proc_stat_ticks(pid):
    s = read_text(f"/proc/{pid}/stat", "")
    if not s:
        return None
    r = s.rfind(")")
    if r == -1:
        return None
    after = s[r + 2 :].split()
    if len(after) < 13:
        return None
    try:
        ut = int(after[11])
        st = int(after[12])
        return ut + st
    except Exception:
        return None

def read_proc_rss_kb(pid):
    for line in read_text(f"/proc/{pid}/status").splitlines():
        if line.startswith("VmRSS:"):
            parts = line.split()
            if len(parts) >= 2:
                try:
                    return int(parts[1])
                except Exception:
                    return 0
    return 0

def read_proc_uid(pid):
    for line in read_text(f"/proc/{pid}/status").splitlines():
        if line.startswith("Uid:"):
            parts = line.split()
            if len(parts) >= 2:
                try:
                    return int(parts[1])
                except Exception:
                    return None
    return None

_UID_MAP = None
def uid_to_user(uid):
    global _UID_MAP
    if uid is None:
        return "?"
    if _UID_MAP is None:
        _UID_MAP = {}
        for line in read_text("/etc/passwd").splitlines():
            if ":" not in line:
                continue
            p = line.split(":")
            if len(p) >= 3:
                try:
                    _UID_MAP[int(p[2])] = p[0]
                except Exception:
                    pass
    return _UID_MAP.get(uid, str(uid))

def read_proc_cmd(pid):
    cmdline = read_text(f"/proc/{pid}/cmdline")
    if cmdline:
        s = cmdline.replace("\x00", " ").strip()
        if s:
            return s
    comm = read_first_line(f"/proc/{pid}/comm", "")
    return comm if comm else str(pid)

# -------------------- TaskMan UI --------------------

class TaskMan:
    def __init__(self):
        self.sort_mode = "CPU"     # CPU or MEM
        self.filter_text = ""
        self.selected = 0
        self.scroll = 0

        self.toast_msg = ""
        self.toast_until = 0.0

        self.prev_cpu_total = 0
        self.prev_cpu_idle = 0
        self.cpu_pct = 0.0

        self.prev_rx = 0
        self.prev_tx = 0
        self.rx_rate = 0.0
        self.tx_rate = 0.0

        self.prev_proc_ticks = {}
        self.prev_cpu_total_for_procs = 0

        self.sys = {}
        self.procs = []

        # header info (static-ish)
        self.host = get_hostname()
        self.os_name = get_os_pretty()
        self.kernel = get_kernel()
        self.cpu_model = get_cpu_model()
        self.cores = os.cpu_count() or 1

    def init_colors(self, stdscr):
        curses.start_color()

        # IMPORTANT: we do NOT call use_default_colors()
        # so background is explicit BLACK, not terminal theme.
        curses.init_pair(1, curses.COLOR_WHITE, curses.COLOR_BLACK)  # base
        curses.init_pair(2, curses.COLOR_CYAN, curses.COLOR_BLACK)   # headers
        curses.init_pair(3, curses.COLOR_YELLOW, curses.COLOR_BLACK) # accents
        curses.init_pair(4, curses.COLOR_RED, curses.COLOR_BLACK)    # hot
        curses.init_pair(5, curses.COLOR_BLACK, curses.COLOR_WHITE)  # selected row (invert)
        curses.init_pair(6, curses.COLOR_WHITE, curses.COLOR_BLACK)  # subtle

        stdscr.bkgd(" ", curses.color_pair(1))
        stdscr.erase()

    def toast(self, msg, secs=1.8):
        self.toast_msg = msg
        self.toast_until = time.monotonic() + secs

    def pct_color(self, pct):
        if pct >= 90:
            return curses.color_pair(4)
        if pct >= 70:
            return curses.color_pair(3)
        return curses.color_pair(2)

    def refresh_system(self, dt):
        total, idle = read_cpu_total_idle()
        if self.prev_cpu_total:
            d_total = max(1, total - self.prev_cpu_total)
            d_idle = max(0, idle - self.prev_cpu_idle)
            self.cpu_pct = clamp((1.0 - (d_idle / d_total)) * 100.0, 0.0, 100.0)
        self.prev_cpu_total, self.prev_cpu_idle = total, idle

        mi = read_meminfo_kb()
        mem_total_kb = mi.get("MemTotal", 0)
        mem_avail_kb = mi.get("MemAvailable", 0)
        mem_used_kb = max(0, mem_total_kb - mem_avail_kb)
        mem_pct = (mem_used_kb / mem_total_kb * 100.0) if mem_total_kb else 0.0

        d_total, d_used, _ = disk_usage_root()
        d_pct = (d_used / d_total * 100.0) if d_total else 0.0

        rx, tx = read_net_bytes_total()
        dt2 = max(0.50, dt)
        if self.prev_rx:
            self.rx_rate = max(0.0, (rx - self.prev_rx) / dt2)
        if self.prev_tx:
            self.tx_rate = max(0.0, (tx - self.prev_tx) / dt2)
        self.prev_rx, self.prev_tx = rx, tx

        load1, load5, load15 = get_loadavg3()
        self.sys = {
            "uptime": get_uptime_str(),
            "load": (load1, load5, load15),
            "cpu_pct": self.cpu_pct,

            "mem_used": mem_used_kb * 1024,
            "mem_total": mem_total_kb * 1024,
            "mem_pct": mem_pct,

            "disk_used": d_used,
            "disk_total": d_total,
            "disk_pct": d_pct,

            "rx_rate": self.rx_rate,
            "tx_rate": self.tx_rate,
        }

    def refresh_processes(self):
        pids = list_pids()
        cpu_total, _ = read_cpu_total_idle()
        total_delta = max(1, cpu_total - self.prev_cpu_total_for_procs) if self.prev_cpu_total_for_procs else 1
        self.prev_cpu_total_for_procs = cpu_total

        out = []
        ftxt = self.filter_text.lower().strip()

        for pid in pids:
            ticks = read_proc_stat_ticks(pid)
            if ticks is None:
                continue
            prev = self.prev_proc_ticks.get(pid, ticks)
            self.prev_proc_ticks[pid] = ticks
            proc_delta = max(0, ticks - prev)
            cpu_pct = (proc_delta / total_delta) * 100.0

            rss_kb = read_proc_rss_kb(pid)
            mem_bytes = rss_kb * 1024

            uid = read_proc_uid(pid)
            user = uid_to_user(uid)
            cmd = read_proc_cmd(pid)

            if ftxt:
                low = cmd.lower()
                if ftxt not in low and ftxt not in user.lower() and ftxt not in str(pid):
                    continue

            out.append({"pid": pid, "user": user, "cpu": cpu_pct, "mem": mem_bytes, "cmd": cmd})

        if self.sort_mode == "MEM":
            out.sort(key=lambda x: (x["mem"], x["cpu"]), reverse=True)
        else:
            out.sort(key=lambda x: (x["cpu"], x["mem"]), reverse=True)

        if self.selected >= len(out):
            self.selected = max(0, len(out) - 1)

        self.procs = out

    def kill_pid(self, pid, sig):
        try:
            os.kill(pid, sig)
            return True, ""
        except PermissionError:
            return False, "permission denied"
        except ProcessLookupError:
            return False, "no such process"
        except Exception as e:
            return False, str(e)

    # -------------------- dialogs --------------------

    def dialog_filter(self, stdscr):
        h, w = stdscr.getmaxyx()
        dw = min(72, max(46, w - 10))
        dh = 5
        x = max(0, (w - dw) // 2)
        y = max(0, (h - dh) // 2)
        s = self.filter_text or ""

        curses.curs_set(1)
        stdscr.nodelay(False)
        while True:
            draw_box(stdscr, y, x, dh, dw, "FILTER", curses.color_pair(2), curses.color_pair(2) | curses.A_BOLD)
            safe_addnstr(stdscr, y + 2, x + 2, "Type and press Enter (empty clears) • Esc cancels", dw - 4, curses.color_pair(6))
            safe_addnstr(stdscr, y + 3, x + 2, "> " + ellipsize(s, dw - 4), dw - 4, curses.color_pair(1))

            try:
                stdscr.move(y + 3, min(x + 4 + len(s), x + dw - 2))
            except curses.error:
                pass
            stdscr.refresh()

            ch = stdscr.getch()
            if ch == 27:
                stdscr.nodelay(True)
                curses.curs_set(0)
                return None
            if ch in (10, 13):
                stdscr.nodelay(True)
                curses.curs_set(0)
                return s.strip()
            if ch in (curses.KEY_BACKSPACE, 127, 8):
                s = s[:-1]
            elif 32 <= ch <= 126:
                s += chr(ch)

    # -------------------- drawing --------------------

    def draw_header(self, stdscr, w):
        # Line 0: name + status
        load1, load5, load15 = self.sys["load"]
        up = self.sys["uptime"]
        right = f"cpu {self.sys['cpu_pct']:.1f}%  •  load {load1} {load5} {load15}  •  up {up}"
        safe_fill(stdscr, 0, 0, w, curses.color_pair(1))
        safe_addnstr(stdscr, 0, 2, "taskman", w - 4, curses.color_pair(2) | curses.A_BOLD)
        safe_addnstr(stdscr, 0, max(2, w - len(right) - 2), right, len(right), curses.color_pair(2))

        # Line 1: machine info
        info = f"{self.host}  •  {self.os_name}  •  kernel {self.kernel}"
        cpu = f"{self.cpu_model}  •  {self.cores} cores"
        line = ellipsize(info + "  •  " + cpu, w - 4)
        safe_fill(stdscr, 1, 0, w, curses.color_pair(1))
        safe_addnstr(stdscr, 1, 2, line, w - 4, curses.color_pair(6))

        # toast (optional)
        if self.toast_msg and time.monotonic() < self.toast_until:
            safe_fill(stdscr, 2, 0, w, curses.color_pair(1))
            safe_addnstr(stdscr, 2, 2, ellipsize(self.toast_msg, w - 4), w - 4, curses.color_pair(3))
        else:
            self.toast_msg = ""
            safe_fill(stdscr, 2, 0, w, curses.color_pair(1))

    def draw_performance(self, stdscr, y, x, h, w):
        # THIS is the “performance part” — make it clean + wide.
        draw_box(stdscr, y, x, h, w, "PERFORMANCE", curses.color_pair(2), curses.color_pair(2) | curses.A_BOLD)

        # inner area
        ix, iy = x + 2, y + 2
        iw = w - 4

        # metrics
        cpu_pct = self.sys["cpu_pct"]
        mem_used = self.sys["mem_used"]
        mem_total = self.sys["mem_total"]
        mem_pct = self.sys["mem_pct"]
        d_used = self.sys["disk_used"]
        d_total = self.sys["disk_total"]
        d_pct = self.sys["disk_pct"]
        rx = self.sys["rx_rate"]
        tx = self.sys["tx_rate"]

        # layout: 3 rows for CPU/MEM/DSK + 1 row NET
        bar_w = max(18, min(40, iw // 2))
        # CPU
        cpu_bar = meter(bar_w, cpu_pct)
        cpu_line = f"CPU  {cpu_pct:5.1f}%"
        safe_addnstr(stdscr, iy + 0, ix, cpu_line, iw, curses.color_pair(1) | curses.A_BOLD)
        safe_addnstr(stdscr, iy + 0, ix + 14, cpu_bar, bar_w, self.pct_color(cpu_pct))

        # MEM
        mem_bar = meter(bar_w, mem_pct)
        mem_line = f"MEM  {human_bytes_dec(mem_used)} / {human_bytes_dec(mem_total)}"
        safe_addnstr(stdscr, iy + 1, ix, ellipsize(mem_line, iw), iw, curses.color_pair(1) | curses.A_BOLD)
        safe_addnstr(stdscr, iy + 1, ix + 14, mem_bar, bar_w, self.pct_color(mem_pct))
        safe_addnstr(stdscr, iy + 1, ix + 14 + bar_w + 2, f"{mem_pct:4.1f}%", iw, curses.color_pair(6))

        # DSK
        dsk_bar = meter(bar_w, d_pct)
        dsk_line = f"DSK  {human_bytes_dec(d_used)} / {human_bytes_dec(d_total)}"
        safe_addnstr(stdscr, iy + 2, ix, ellipsize(dsk_line, iw), iw, curses.color_pair(1) | curses.A_BOLD)
        safe_addnstr(stdscr, iy + 2, ix + 14, dsk_bar, bar_w, self.pct_color(d_pct))
        safe_addnstr(stdscr, iy + 2, ix + 14 + bar_w + 2, f"{d_pct:4.1f}%", iw, curses.color_pair(6))

        # NET
        net_line = f"NET  ↓ {human_rate_dec(rx)}   ↑ {human_rate_dec(tx)}"
        safe_addnstr(stdscr, iy + 3, ix, ellipsize(net_line, iw), iw, curses.color_pair(6))

    def draw_processes(self, stdscr, y, x, h, w):
        title = f"PROCESSES  (sort: {self.sort_mode.lower()}  •  filter: {(self.filter_text or '—')})"
        draw_box(stdscr, y, x, h, w, title, curses.color_pair(2), curses.color_pair(2))

        # table header
        ix, iy = x + 2, y + 2
        iw = w - 4

        col_cpu = 7
        col_mem = 10
        col_pid = 8
        col_user = 10
        col_name = iw - (col_cpu + col_mem + col_pid + col_user + 4)
        if col_name < 18:
            col_name = 18

        hdr = curses.color_pair(3) | curses.A_BOLD
        safe_addnstr(stdscr, iy, ix, "NAME", col_name, hdr)
        safe_addnstr(stdscr, iy, ix + col_name + 1, "CPU", col_cpu, hdr)
        safe_addnstr(stdscr, iy, ix + col_name + 1 + col_cpu + 1, "MEM", col_mem, hdr)
        safe_addnstr(stdscr, iy, ix + col_name + 1 + col_cpu + 1 + col_mem + 1, "PID", col_pid, hdr)
        safe_addnstr(stdscr, iy, ix + col_name + 1 + col_cpu + 1 + col_mem + 1 + col_pid + 1, "USER", col_user, hdr)

        safe_hline(stdscr, iy + 1, ix, ord("─"), iw, curses.color_pair(1))

        rows_y = iy + 2
        rows_avail = max(1, h - 5)  # minus borders/header
        n = len(self.procs)

        if self.selected < self.scroll:
            self.scroll = self.selected
        if self.selected >= self.scroll + rows_avail:
            self.scroll = self.selected - rows_avail + 1
        self.scroll = clamp(self.scroll, 0, max(0, n - rows_avail))

        for i in range(rows_avail):
            idx = self.scroll + i
            yy = rows_y + i
            safe_fill(stdscr, yy, ix, iw, curses.color_pair(1))
            if idx >= n:
                continue

            p = self.procs[idx]
            cmd = ellipsize(p["cmd"], col_name)
            cpu = p["cpu"]
            mem = ellipsize(human_bytes_dec(p["mem"]), col_mem)
            pid = str(p["pid"])
            user = ellipsize(p["user"], col_user)

            selected = (idx == self.selected)
            if selected:
                row_attr = curses.color_pair(5) | curses.A_BOLD
                safe_fill(stdscr, yy, ix, iw, row_attr)
                cpu_attr = row_attr
            else:
                row_attr = curses.color_pair(1)
                cpu_attr = self.pct_color(cpu)

            safe_addnstr(stdscr, yy, ix, cmd, col_name, row_attr)
            safe_addnstr(stdscr, yy, ix + col_name + 1, f"{cpu:5.1f}%", col_cpu, cpu_attr)
            safe_addnstr(stdscr, yy, ix + col_name + 1 + col_cpu + 1, mem, col_mem, row_attr)
            safe_addnstr(stdscr, yy, ix + col_name + 1 + col_cpu + 1 + col_mem + 1, ellipsize(pid, col_pid), col_pid, row_attr)
            safe_addnstr(stdscr, yy, ix + col_name + 1 + col_cpu + 1 + col_mem + 1 + col_pid + 1, user, col_user, row_attr)

    def draw_keys(self, stdscr, h, w):
        # compact, readable, clean (two lines)
        safe_hline(stdscr, h - 3, 0, ord("─"), w, curses.color_pair(1))
        safe_fill(stdscr, h - 2, 0, w, curses.color_pair(1))
        safe_fill(stdscr, h - 1, 0, w, curses.color_pair(1))

        line1 = "↑↓ Select   PgUp/PgDn Jump   Enter Terminate   K Kill"
        line2 = "S Sort   / Filter   R Refresh   Q Exit"
        safe_addnstr(stdscr, h - 2, 2, ellipsize(line1, w - 4), w - 4, curses.color_pair(2))
        safe_addnstr(stdscr, h - 1, 2, ellipsize(line2, w - 4), w - 4, curses.color_pair(2) | curses.A_BOLD)

    # -------------------- main loop --------------------

    def run(self, stdscr):
        curses.curs_set(0)
        stdscr.nodelay(True)
        stdscr.keypad(True)
        self.init_colors(stdscr)

        self.prev_cpu_total, self.prev_cpu_idle = read_cpu_total_idle()
        self.prev_rx, self.prev_tx = read_net_bytes_total()

        last_refresh = time.monotonic()
        dt_last = REFRESH_SEC

        self.refresh_system(REFRESH_SEC)
        self.refresh_processes()
        need_redraw = True

        while True:
            now = time.monotonic()

            if now - last_refresh >= REFRESH_SEC:
                dt = now - last_refresh
                last_refresh = now
                dt_last = max(0.50, dt)
                self.refresh_system(dt_last)
                self.refresh_processes()
                need_redraw = True

            ch = -1
            try:
                ch = stdscr.getch()
            except Exception:
                ch = -1

            if ch != -1:
                if ch in (ord("q"), ord("Q")):
                    return

                if ch in (ord("r"), ord("R")):
                    self.refresh_system(max(0.50, dt_last))
                    self.refresh_processes()
                    self.toast("refreshed", 1.0)
                    need_redraw = True

                elif ch in (ord("s"), ord("S")):
                    self.sort_mode = "MEM" if self.sort_mode == "CPU" else "CPU"
                    self.refresh_processes()
                    self.toast(f"sort: {self.sort_mode.lower()}", 1.0)
                    need_redraw = True

                elif ch == ord("/"):
                    s = self.dialog_filter(stdscr)
                    if s is not None:
                        self.filter_text = s
                        self.selected = 0
                        self.scroll = 0
                        self.refresh_processes()
                        self.toast("filter set" if s else "filter cleared", 1.2)
                        need_redraw = True

                elif ch == curses.KEY_UP:
                    if self.selected > 0:
                        self.selected -= 1
                        need_redraw = True

                elif ch == curses.KEY_DOWN:
                    if self.selected < max(0, len(self.procs) - 1):
                        self.selected += 1
                        need_redraw = True

                elif ch == curses.KEY_PPAGE:
                    self.selected = max(0, self.selected - JUMP_ROWS)
                    need_redraw = True

                elif ch == curses.KEY_NPAGE:
                    self.selected = min(max(0, len(self.procs) - 1), self.selected + JUMP_ROWS)
                    need_redraw = True

                elif ch in (10, 13, curses.KEY_ENTER):  # Enter = terminate
                    if self.procs:
                        pid = self.procs[self.selected]["pid"]
                        ok, err = self.kill_pid(pid, signal.SIGTERM)
                        self.toast("terminated" if ok else f"failed: {err}", 1.4)
                        self.refresh_processes()
                        need_redraw = True

                elif ch in (ord("k"), ord("K")):  # K = kill
                    if self.procs:
                        pid = self.procs[self.selected]["pid"]
                        ok, err = self.kill_pid(pid, signal.SIGKILL)
                        self.toast("killed" if ok else f"failed: {err}", 1.4)
                        self.refresh_processes()
                        need_redraw = True

            toast_visible = self.toast_msg and (time.monotonic() < self.toast_until)
            if need_redraw or toast_visible:
                h, w = stdscr.getmaxyx()
                stdscr.erase()

                # minimum size for this layout
                if h < 26 or w < 110:
                    msg = "Resize terminal (recommended >= 110x26)."
                    safe_addnstr(stdscr, 0, 2, msg, w - 4, curses.color_pair(2) | curses.A_BOLD)
                    stdscr.refresh()
                    time.sleep(0.06)
                    continue

                # Layout:
                # 0-2 header, 3 spacer, performance box, then smaller process box, then keys.
                self.draw_header(stdscr, w)

                perf_h = 8
                perf_y = 3
                perf_x = 2
                perf_w = w - 4
                self.draw_performance(stdscr, perf_y, perf_x, perf_h, perf_w)

                # Process panel intentionally smaller (fixed height)
                proc_h = PROCS_PANEL_ROWS
                proc_y = perf_y + perf_h + 1
                proc_x = 2
                proc_w = w - 4
                self.draw_processes(stdscr, proc_y, proc_x, proc_h, proc_w)

                self.draw_keys(stdscr, h, w)

                stdscr.refresh()
                need_redraw = False

            time.sleep(0.03)

def main():
    # best-effort: push terminal into black background before curses (some themes ignore this)
    try:
        sys.stdout.write("\033[40m\033[2J\033[H")
        sys.stdout.flush()
    except Exception:
        pass
    curses.wrapper(TaskMan().run)

if __name__ == "__main__":
    main()
